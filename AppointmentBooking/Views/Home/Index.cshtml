@{
  ViewData["Title"] = "Home Page";
}


<div class="jumbotron jumbotron-fluid bg-gradient-to-r from-blue-500 to-green-400 text-white">
  <div class="container">
    <h1 class="display-4">Hello, Welcome to The Scheduler.</h1>
    <p class="lead">Book, manage and monitor your appointments with few clicks and clearity.</p>


  </div>

</div>

</div>

<div class="md:flex h-full mr-1 ml-1 md:p-5 p-2 ">
  <div class="flex-1 tracking-wide ">
    <h1 class="font-semibold text-3xl">A simple Appointments Manager</h1>
    <br>
    <p class="text-gray-400">A clean and simple Interface for managing your appointments for your small business.</p>
    <p class="text-gray-400">Organize all your schedule needs with easy to use dashboard.</p>
    <p class="text-gray-400">Book Your Appointment Now.</p>
    <br>
    <div class="mx-auto text-center mt-40">
      <button
        class="bg-blue-600 hover:bg-blue-700 hover:text-white text-white font-bold py-2 px-4 rounded text-2xl mb-4">
        <a asp-area="" class="hover:text-white text-decoration-none" asp-controller="BookedAppointments"
          asp-action="Create">Book Now</a>

      </button>

    </div>

  </div>
  <div>
    <img src="~/images/landing-calender.svg" alt="calender image">
  </div>
</div>
