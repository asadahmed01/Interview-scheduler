<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AppointmentBooking</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="preconnect" href="https://fonts.gstatic.com">
<link href="https://fonts.googleapis.com/css2?family=Rubik&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site2.css" />
    <link rel="stylesheet" href="~/css/output.css" />
</head>

<body>
@{
    string name = "";
    string imageSrc = "";
    @foreach(var item in User.Claims)
    {
        if(item.Type == "name")
        {
                name = item.Value;
        }
        if (item.Type == "picture")
        {
            imageSrc = item.Value;
              
        }
    }
}
    
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">AppointmentBooking</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1 justify-content-end">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="InterviewerModels" asp-action="Index">Dashboard</a>
                        </li>
                    @*                       

                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="AvailableTimes" asp-action="Index">Available</a>
                        </li>
                       *@

                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="BookedAppointments" asp-action="Create">Book Now</a>
                        </li>
                        @if (User.Identity.IsAuthenticated)
                        {
                            
                           <li class="nav-item">
                                <a class="nav-link text-dark text-uppercase" >@name</a>
                            </li>

                            <li class="navbar-brand ">
                                <img class="w-8 l-8 rounded-circle" src=@imageSrc />
                            </li>

                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="InterviewerModels" asp-action="Logout">Logout</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>

    </header>
    <div class="container h-full m-0 min-w-full">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    
    <!-- component -->
<footer class="footer bg-white relative pt-1 border-b-2 border-blue-700">
   
    <div class="container mx-auto px-2">
        <div class="mt-16 border-t-2 border-gray-300 flex flex-col items-center">
            <div class="sm:w-2/3 text-center py-2">
                <p class="text-sm text-blue-700 font-bold">
                  ©@DateTime.Now.Year  by ASSAD AHMED
                </p>
            </div>
        </div>
    </div>
</footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
